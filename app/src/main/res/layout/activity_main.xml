<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="?android:attr/buttonBarStyle"
    android:orientation="vertical"
    tools:context=".activity.MainActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

                <Button
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="?android:attr/buttonBarButtonStyle"
                    android:background="#0F0"
                    android:text="@string/MC" />

                <Button
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="?android:attr/buttonBarButtonStyle"
                    android:text="@string/MR" />

                <Button
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="?android:attr/buttonBarButtonStyle"
                    android:text="@string/xxx" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F00"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

                <Button
                    android:onClick="method1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Method1"/>

                <Button
                    android:onClick="method2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Method2"/>

                <Button
                    android:onClick="method3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Method3"/>

                <Button
                    android:onClick="method4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Method4"/>
        </LinearLayout>

        <EditText
            android:id="@+id/edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="edit your code!"/>

        <Button
            android:id="@+id/btn_opentest1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="打开Test1窗口"/>
</LinearLayout>