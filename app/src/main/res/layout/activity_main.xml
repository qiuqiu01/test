<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="?android:attr/buttonBarStyle"
    android:orientation="vertical"
    tools:context=".activity.MainActivity">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

                <Button
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="?android:attr/buttonBarButtonStyle"
                    android:background="#0F0"
                    android:text="@string/MC" />

                <Button
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="?android:attr/buttonBarButtonStyle"
                    android:text="@string/MR" />

                <Button
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="?android:attr/buttonBarButtonStyle"
                    android:text="@string/xxx" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F00"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:weightSum="4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

                <Button
                    android:onClick="method1"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Method1"/>

                <Button
                    android:onClick="method2"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Method2"/>

                <Button
                    android:onClick="method3"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Method3"/>

                <Button
                    android:onClick="method4"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Method4"/>
        </LinearLayout>

        <EditText
            android:id="@+id/edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="横竖屏切换测试saveInstanceState数据"/>

        <Button
            android:id="@+id/btn_open_second"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="打开窗口Second实现广播关闭App"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F00"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>

        <Button
            android:id="@+id/btn_open_vp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="打开ViewPager窗口"/>

        <Button
            android:id="@+id/btn_open_refresh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="打开下拉刷新示例窗口"/>

        <Button
            android:id="@+id/btn_open_news"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="打开新闻窗口-自定义控件SlidingMenu"/>

        <Button
            android:id="@+id/btn_open_lv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="打开ListView窗口"/>
</LinearLayout>