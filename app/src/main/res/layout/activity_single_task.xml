<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.activity.launchmode.SingleTaskActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SingleTask"
        android:textSize="30dp"
        android:gravity="center"/>

    <Button
        android:id="@+id/btn_open_standard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="Standard"
        android:textSize="30dp"/>

    <Button
        android:id="@+id/btn_open_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="Top"
        android:textSize="30dp"/>

    <Button
        android:id="@+id/btn_open_task"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="Task"
        android:textSize="30dp"/>

    <Button
        android:id="@+id/btn_open_instance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="Instance"
        android:textSize="30dp"/>
</LinearLayout>


